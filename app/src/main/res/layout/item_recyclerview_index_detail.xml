<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FFFFFF"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/addIndexListView"
        android:orientation="horizontal"
        >
        <!--指标 剂量单位-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="2"
            android:gravity="center|center_horizontal|center_vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:id="@+id/listView_index"
                android:textColor="#000000"
                android:textSize="20sp"
                android:text="128.96"
                android:layout_marginRight="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:id="@+id/listView_dosage"
                android:textColor="#000000"
                android:textSize="20sp"
                android:text="U/L"
                />
        </LinearLayout>
        <!--正常、异常-->
        <TextView
            android:gravity="center|center_horizontal|center_vertical"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="match_parent"
            android:id="@+id/listView_status"
            android:textSize="15sp"
            tools:text="正常"
            />
        <!--标准值-->
        <TextView
            android:gravity="center|center_horizontal|center_vertical"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:id="@+id/listView_standard"
            android:text="0.2~1.0"
            android:textSize="15sp"
            />
        <!--年月日-->
        <TextView
            android:gravity="center|center_horizontal|center_vertical"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="match_parent"
            android:id="@+id/listView_date"
            android:text="2019-01-02"
            android:textSize="15sp"
            />


    </LinearLayout>


</LinearLayout>